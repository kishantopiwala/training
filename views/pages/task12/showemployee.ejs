<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee List</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        .container {
            max-width: 1140px;
            margin: 50px auto;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>

<body class="container" onload="getemployees()">
    <div>
        <a href="/ajax/jobform" class="btn btn-primary">Add Employee</a>
    </div>
    <h1>Get Employee Details</h1>

    <table class="table">
        <thead id="thead">
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Controls</th>
            </tr>
        </thead>
        <tbody id="tbody">
        </tbody>
    </table>
</body>
<script>
    async function getemployees() {
        var response = await fetch('http://localhost:8080/ajax/getemployee');
        var data = await response.json();
        var thead = document.getElementById('thead');
        var tbody = document.getElementById('tbody');
        var th = document.createElement('th');
        console.log(data)
        for (const i in data) {
            var td;
            var tr;
            var employeeid;
            tr = document.createElement('tr')
            Object.keys(data[i]).forEach((element) => {
                employeeid = data[i].emp_id
                td = document.createElement('td')
                td.textContent = data[i][element]
                tr.append(td)
            })
            tr.innerHTML += `<td><a href='/ajax/updateemployeeform/${employeeid}' class='btn btn-primary'>Update</a></td>`
            tbody.append(tr)
        }
    }
</script>

</html>